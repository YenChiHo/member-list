html
    head
        title
            |SITW membership
        link(href="./css/index.css", rel="stylesheet", type="text/css")
        link(href='http://fonts.googleapis.com/css?family=Kite+One', rel='stylesheet', type='text/css')
        script(src="./js/jquery-1.10.2.min.js")
        script(src="./js/index.js")
        link(rel="shortcut icon",type="image/x-icon",href="logo/favicon.ico")
    body
        header 
            div.header-container
                div.header-left
                    img(src="./logo/sitw-logo-03.png")
                    |SITW membership
                div.header-right
                    div.choice
                        a(href="http://www.sitw.tw", target="_blank") HOME

        main#membership


        footer
        script(src="./js/zepto.min.js")
        script(src="./js/handlebars.js")
        script(id="entry-template", type="text/x-handlebars-template").

            <section>
                <div class="info-left">
                    <div class='name'>
                        {{name}}
                    </div>
                    <div class='head'>
                        <img src="http://avatars.io/facebook/{{facebook-id}}?size=large" width="200">
                    </div>
                </div>
                <div class="info-middle">
                    <li>
                        <div class='word1'>
                            School
                        </div>
                        <div class='word2'>
                            NCKU {{department}} {{class}}
                        </div>
                    </li>
                    <li>
                        <div class='word1'>
                            Skill
                        </div>
                        <div class='word2'>
                            {{skill}}
                        </div>
                    </li>
                    <li>
                        <div class='word1'>
                            <span class='word1-1'>Disctiption</span>
                        </div>
                        <div class='word2'>
                            {{description}}
                        </div>
                    </li>
                </div>
                <div class='info-right'>
                    <li>
                        <a href="http://www.github.com/{{github-id}}"><img src="img/github.png"></a>
                    </li>          
                    <li>
                        <a href="http://www.facebook.com/{{facebook-id}}"><img src="img/facebook.png"></a>
                    </li>
                    <li>
                        <a href="http://www.twitter.com/{{twitter-id}}"><img src="img/twitter.png"></a> 
                    </li>
                    <li>
                        <a href="mailto:{{email}}"><img src="img/gmail.png"></a>
                    </li>
                </div>
                <div class="personal_clear">
                </div>
            </section>

        script.
            $(document).ready(function(){
                $.getJSON('./member.json', function(data){
                    console.log(data)

                        var source   = $("#entry-template").html()
                            , template = Handlebars.compile(source);

                            console.log(source)
                        for (var i = data.length - 1; i >= 0; i--) {

                            var html    = template(data[i]);
                            console.log(html)
                            $('#membership').append(html)

                        };
                });
            });

