html
    head
        link(href="./css/index.css", rel="stylesheet", type="text/css")
        link(href='http://fonts.googleapis.com/css?family=Kite+One', rel='stylesheet', type='text/css')
        script(src="./js/jquery-1.10.2.min.js")
        script(src="./js/index.js")
    body
        header 
            div.header-container
                div.header-left
                    img(src="./logo/sitw-logo-03.png")
                    |SITW membership
                div.header-right
                    div.choice

        main#membership


        footer
        script(src="./js/zepto.min.js")
        script(src="./js/handlebars.js")
        script(id="entry-template", type="text/x-handlebars-template").

            <section>
                <div class="info-left">
                    <div class='picture-top'>
                        {{name}}
                    </div>
                    <div class='picture-bottom'>
                        <img src="http://avatars.io/facebook/{{facebook-id}}?size=large" width="200">
                    </div>
                </div>
                <div class="info-right">
                    <li>
                        Department: {{department}}
                    </li>
                    <li>
                        Class: {{class}}
                    </li>
                    <li>
                        Skill: {{skill}}
                    </li>
                </div>
                <div class="personal_clear">
                </div>
            </section>

        script.
            $(document).ready(function(){
                $.getJSON('./member.json', function(data){
                    console.log(data)

                        var source   = $("#entry-template").html()
                            , template = Handlebars.compile(source);

                            console.log(source)
                        for (var i = data.length - 1; i >= 0; i--) {

                            var html    = template(data[i]);
                            console.log(html)
                            $('#membership').append(html)

                        };
                });
            });

